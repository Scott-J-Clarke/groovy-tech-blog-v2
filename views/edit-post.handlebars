<article>

    <h2 class="title mt-5 ml-3">Edit Post</h2><hr>
    <div class="is-pulled-right mr-5">
        Created by you on {{formatDate post.created_at}} |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{formatPlural "comment" post.comments.length}}</a>
    </div>

    <form class="edit-post-form">

        <div class="columns ml-3">
            <div class="column is-three-fifths">
                <label for="post-title">Post title:</label>
                <input class="input" name="post-title" type="text" value="{{post.title}}" />
            </div>
        </div>

        <div class="columns ml-3">
            <div class="column is-four-fifths">
                <label for="post-content">Post content:</label>
                <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
            </div>
        </div>

        <button type="submit" class="button is-success ml-5">Save Post</button>
        <button type="button" class="button is-danger delete-post-btn ml-5">Delete Post</button>

    </form>

</article>

{{> comments post.comments}}

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>